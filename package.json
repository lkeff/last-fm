{
  "name": "last-fm",
  "description": "Simple, robust LastFM API client (for public data) with enhanced security features",
  "version": "5.3.0",
  "author": {
    "name": "Feross Aboukhadijeh",
    "email": "feross@feross.org",
    "url": "https://feross.org"
  },
  "security": {
    "contact": "support@traycer.ai",
    "policy": "https://traycer.ai/security-policy"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/feross/last-fm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/feross/last-fm.git"
  },
  "homepage": "https://github.com/feross/last-fm",
  "keywords": [
    "lastfm",
    "lastfm api",
    "lastfm data",
    "music",
    "music api",
    "music data",
    "last fm",
    "last fm api",
    "last fm data",
    "public data",
    "get",
    "data",
    "api",
    "last.fm",
    "last.fm api",
    "security",
    "html-sanitization",
    "url-validation",
    "encryption",
    "afk-guard"
  ],
  "license": "MIT",
  "main": "main.js",
  "dependencies": {
    "axios": "^1.4.0",
    "dompurify": "^2.4.0",
    "dotenv": "^16.3.1",
    "electron": "^25.4.1",
    "helmet": "^7.0.0",
    "keytar": "7.9.0",
    "run-parallel": "^1.1.10",
    "simple-get": "^4.0.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "dependency-check": "^5.0.0-7",
    "electron-builder": "^24.6.4",
    "eslint": "^9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "npm-audit-ci": "^1.2.1",
    "snyk": "^1.109.0",
    "standard": "*"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test:security": "eslint . --max-warnings 50",
    "test": "standard && npm run test:security && node -e \"require('./')\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "security-audit": "npm audit && electron-builder --dir --config.nsis.oneClick=false",
    "build:secure": "npm run security-audit && npm run dist",
    "bot": "node bot.js"
  },
  "build": {
    "appId": "com.feross.lastfm",
    "productName": "LastFM Desktop",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "assets/**/*",
      "fiddle-templates/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": "resources",
        "filter": [
          "!**/.env",
          "!**/*.env",
          "!**/.env.example"
        ]
      }
    ],
    "ignore": [
      "**/*.env",
      "**/.env.example",
      "**/certs/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signingHashAlgorithms": [
        "sha256"
      ],
      "certificateFile": "certs/win/codesign.pfx",
      "certificatePassword": "${env:CSC_KEY_PASSWORD}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": "Developer ID Application: Your Name (TEAMID)"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "generic",
      "url": "https://your-download-server.com/releases/"
    }
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/feross"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/feross"
    },
    {
      "type": "consulting",
      "url": "https://feross.org/support"
    }
  ]
}
